<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.HouseholdViewController">
   <center>
   
             <TableView fx:id="householdTable" BorderPane.alignment="CENTER">
           <columns>
               <TableColumn fx:id="idColumn" prefWidth="100" text="ID" />
               <TableColumn fx:id="addressColumn" prefWidth="250" text="Address" />
               <TableColumn fx:id="headNameColumn" prefWidth="200" text="Household Head" />
           </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
       </TableView>
   </center>
   <top>
   
             <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
      <children>
              <Label text="Search:" />
              <TextField fx:id="searchField" promptText="Search by address or head name" HBox.hgrow="ALWAYS" />
      </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
       </HBox>
   </top>
   <bottom>
   
             <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
      <children>
              <Button fx:id="addButton" styleClass="button-primary" text="Add Household" />
              <Button fx:id="editButton" text="Edit" />
              <Button fx:id="deleteButton" styleClass="button-danger" text="Delete" />
      </children>
       </HBox>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
