<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Khoản thu"
             style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 20 0 20 0;"
             BorderPane.alignment="CENTER"/>
   </top>
   <center>
      <GridPane hgap="20" vgap="14" alignment="CENTER">
         <padding>
            <Insets top="30" right="80" bottom="30" left="80"/>
         </padding>
         <columnConstraints>
            <ColumnConstraints minWidth="120.0" halignment="LEFT"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="36"/>
            <RowConstraints minHeight="90"/>
         </rowConstraints>

         <Label text="Tên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
         <TextField fx:id="nameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

         <Label text="Loại khoản thu:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
         <Label fx:id="typeLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

         <Label text="Ngày tạo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
         <Label fx:id="createDateLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

         <Label text="Số tiền/m2:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
         <TextField fx:id="moneyTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

         <Label text="Mô tả:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
         <TextField fx:id="descriptionTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

         <Label text="Tổng thu:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
         <Label fx:id="sumChargeLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

         <Label text="Số hộ đã thu:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
         <Label fx:id="paidCountLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

         <Label text="Hộ đã thu:" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
         <ScrollPane prefHeight="90" GridPane.rowIndex="7" GridPane.columnIndex="1">
            <content>
               <VBox fx:id="listPaidVBox" spacing="4">
                  <padding>
                     <Insets top="5" right="5" bottom="5" left="5"/>
                  </padding>
               </VBox>
            </content>
         </ScrollPane>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="18">
         <padding>
            <Insets top="22" right="0" bottom="22" left="0"/>
         </padding>
         <Button fx:id="updateChargeButton" text="Update"/>
         <Button fx:id="deleteButton" text="Delete"/>
         <Button fx:id="cancelButton" text="Cancel"/>
      </HBox>
   </bottom>
</BorderPane>
